% no indent, but a bit of space between paragraphs
\usepackage{parskip}

% widen the page
\usepackage[text={6.25in,8.5in},centering]{geometry}

\linespread{1.3}

% setup source listings
\usepackage{listings}
\usepackage{textcomp}
\lstset{language=IDL,upquote=true,showstringspaces=false}
\lstset{numbers=none, numberstyle=\tiny,numbersep=7pt,xleftmargin=5pt}
\lstset{basicstyle=\ttfamily,keywordstyle={}}

% set up links
\usepackage[unicode,colorlinks=true,linkcolor=blue,urlcolor=blue,citecolor=blue]{hyperref}
\urlstyle{same}

% get regular fonts
\usepackage{fontspec}
\usepackage{xunicode}
\usepackage{xltxtra}
\setmainfont{Times New Roman}
\defaultfontfeatures{Scale=MatchLowercase}
\setmonofont{Monaco}

\usepackage[runin]{abstract}

\usepackage[labelfont=bf,justification=raggedright,labelsep=endash,singlelinecheck=false]{caption}

% setup header/footer
\usepackage{fancyhdr}
\pagestyle{fancy}

\renewcommand{\sectionmark}[1]{\markboth{\thesection.\ #1}{}}
 
\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}

\fancyhead{}
\fancyhead[LE,RO]{\thepage} 
\fancyhead[C]{\em Separation agreement}  % title
\fancyhead[LO,RE]{\leftmark}  % section

\fancyfoot{}
\fancyfoot[RE,LO]{}
\fancyfoot[C]{}
\fancyfoot[LE,RO]{}


% fix up the headings
\RequirePackage[calcwidth]{titlesec}

\titleformat{\section}{\normalfont\Large}{\thesection.}{0.5em}{}
\titleformat{\subsection}{\normalfont\large}{\thesubsection}{0.5em}{}
\titleformat{\subsubsection}{\normalfont\normalsize}{\thesubsubsection}{0.5em}{}
\titleformat{\paragraph}[runin]{\normalfont\normalsize\scshape}{\theparagraph}{0.5em}{}



